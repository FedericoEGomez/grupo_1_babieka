<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Editar producto'}) %>   <!--// partial Head //-->
    <body>
        
        <%- include('../partials/header') %>   <!--// partial Header //-->
        
        <main class="registermain">
    
            <section class= "formulario-upload">
               
                <h1 class="h1-size marg-0 centrar">Editar artículo</h1>
                <form action="/producto/<%=product.id%>/editar?_method=PUT" method="POST" enctype="multipart/form-data">    <!--// Formulario Nuevo Artículo //-->
                    
                    <label for="model"></label>    <!--// Nombre //-->
                    <p><input type="text" name="model" id="model" value="<%=product.model.name%>"></p>
                    
                    <p>
                        <label for="category"> Categoría del artículo : </label>
                        <select name="category">   <!--// Categoria //-->
                            <% for (category of categories) { %>
                                <% if (category.name == product.category.name) { %>
                                    <option value="<%= category.id %>" selected><%= category.name %></option>
                                <% } else { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                <% } %> 
                            <% } %> 
                        </select>
                    </p>
                   
                    <p>
                        <label for="type">Tipo de artículo : </label> <!--// Tipo //-->
                        <select name="type">  
                            <% for (type of types) { %>
                                <% if (type.name == product.type.name) { %>
                                    <option value="<%= type.id %>" selected><%= type.name %></option>
                                <% } else { %>
                                    <option value="<%= type.id %>"><%= type.name %></option>
                                <% } %> 
                            <% } %>
                        </select>
                    </p>
                    
                    <p>
                        <label for="size">Talle de artículo : </label> <!--// Talle //-->
                        <select name="size">    
                            <% for (size of sizes) { %>
                                <% if (size.number == product.size.number) { %>
                                    <option value="<%= size.id %>" selected><%= size.number %></option>
                                <% } else { %>
                                    <option value="<%= size.id %>"><%= size.number %></option>
                                <% } %>
                            <% } %> 
                        </select>
                    </p>

                    <p>
                        <label for="color">Color del artículo : </label> <!--// Color //-->
                        <select name="color">   
                            <% for (color of colors) { %>
                                <% if (color.name == product.color.name) { %>
                                    <option value="<%= color.id %>" selected><%= color.name %></option>
                                <% } else { %>
                                    <option value="<%= color.id %>"><%= color.name %></option>
                                <% } %>         
                            <% } %> 
                        </select>
                    </p>

                    <!--ponga un numero de stock-->
                    <label for="stock">Stock : </label>    <!--// Descripción //-->
                    <p><input type="number" name="stock" id="stock" placeholder="10"></p>
                
                    <label for="description">Descripción del artículo : </label>    <!--// Descripción //-->
                    <p><textarea name="description" id="description" cols="53" rows="5"><%=product.description.text%></textarea></p>

                    <p>    <!--// Imagen //-->
                        <input type="file" name="image" accept="image/png, .jpeg, .jpg, image/gif"> 
                        <input type="submit" value="Subir Imagen">  
                    </p>

                    <p>
                        <label for="discount">Descuento : </label>    <!--// El Discount //-->
                        <select name="discount">   
                            <% for (discount of discounts) { %>
                                <% if (discount.number == product.discount.number) { %>
                                    <option value="<%= discount.id %>" selected><%= discount.number %>%</option>
                                <% } else { %>
                                    <option value="<%= discount.id %>"><%= discount.number %>%</option>
                                <% } %>         
                            <% } %> 
                        </select>
                    </p>

                    <label for="precioArticulo"></label>    <!--// Precio //-->
                    <p><input type="text" name="price" id="precioArticulo" value="<%=product.price%>"></p>    

                    <button type="submit">Editar artículo</button>  <!--// Botón Editar producto //-->
                    
                </form>
                <form action="/producto/<%=product.id%>/eliminar?_method=DELETE" method="POST"> <!--// Botón Eliminar producto //-->
                    <button type="submit" class="marg-nonside-10">Eliminar artículo</button> 
                </form>
            </section>
    
        </main>
        
        <%- include('../partials/footer') %>   <!--// partial Footer //-->
        
    </body>
</html>