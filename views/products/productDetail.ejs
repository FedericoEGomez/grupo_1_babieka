<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: product.name}) %>   <!--// partial Head //-->
    <body>
        
        <%- include('../partials/header') %>   <!--// partial Header //-->
        
        <main class="mainUs">
            
            <div class="main-det borde-general">       
                
                <div class="main-det cen-1">
                    <article class="main-det sinborde bordeImagen">
                        <img class = "width-100" src="/img/products/<%= product.image %>" alt="Imagen del artículo">
                    </article>
                </div>

                <div class="cen-2 columna Detalle sinborde">   <!--// Descripcion y opciones del artículo //-->
                    <p class="letraGrande"><%= product.name %></p>
                    <p class="letra-del-precio">$<%= product.price %></p>
                    
                    <div>
                        <p>Color del producto</p>
                    </div>
                    <article class="sinborde">
                        <form action="">
                            <button class="boton1"> </button>
                            <button class="boton2"> </button>
                            <button class="boton3"> </button>
                        </form>
                    </article>
                    
                    <p>Talle del producto</p>
                    <div class="sinborde">
                        <form action="" class="boton3">
                            <button>35</button>
                            <button>36</button>
                            <button>37</button>
                            <button>38</button>
                            <button>39</button>
                            <button>40</button>
                        </form>
                    </div>
                    <div>
                        <p class="letra-del-precio">Descripcion</p>
                        <p><%= product.description %></p>
                    </div>
                    <div>
                        <p>Cantidad</p>
                    </div>        
                    <div class="main-det columna sinborde">   <!--// Botón cantidad //-->      
                        <script>
                            a=1;
                        </script>
                        <form action="" method="" >
                            <a href="javascript:a--; update(a);"><i class="fas fa-minus boton4"></i></a> 
                                <input type="text" id="a" size="1" class="centrarletra"/>
                            <a href="javascript:a++; update(a);"><i class="fas fa-plus boton4"></i></a>
                        </form>
                        <script>
                            input_a = document.getElementById('a');
                            function update(){
                                input_a.value=a;
                            }
                            update();
                        </script>
                    </div> 
                            
                    <div>   <!--// Botón Comprar //-->
                        <form action="/producto/<%=product.id%>/agregar" method="POST">
                            <button type="submit" class="boton5">Agregar a la bolsa</button>
                        </form>
                    </div>       
                </div>

            </div> 
    
        </main>
        
        <%- include('../partials/footer') %>   <!--// partial Footer //-->

    </body>
</html>